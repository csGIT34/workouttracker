{
  "name": "workout-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack workout tracking application",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=@workout-tracker/backend",
    "dev:frontend": "npm run dev --workspace=@workout-tracker/frontend",
    "build:backend": "npm run build --workspace=@workout-tracker/backend",
    "build:frontend": "npm run build --workspace=@workout-tracker/frontend",
    "build:all": "npm run build --workspaces",
    "docker:build": "npm run docker:build:backend && npm run docker:build:frontend",
    "docker:build:backend": "docker build -t workout-backend:latest ./packages/backend",
    "docker:build:frontend": "docker build -t workout-frontend:latest ./packages/frontend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
